<?xml version="1.0" encoding="utf-8" ?>
<Screens:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Screens="clr-namespace:WeatherApp.Views.Shared"
             xmlns:Translations="clr-namespace:WeatherApp.Extensions"
             x:Class="WeatherApp.Views.Registration.LoginView">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Entry x:Name="UserNameEntry" Grid.Row="1" Placeholder="{Translations:Translate Label_UserName}" HorizontalOptions="FillAndExpand" Style="{StaticResource NormalEntryStyle}" Margin="20,0,20,0" Text="{Binding UserName}"/>
            <Entry x:Name="PasswordEntry" IsPassword="True" Grid.Row="2" Placeholder="{Translations:Translate Label_Password}" HorizontalOptions="FillAndExpand" Style="{StaticResource NormalEntryStyle}" Margin="20,0,20,0" Text="{Binding Password}"/>
            <Button x:Name="LoginButton" Grid.Row="3" Text="{Translations:Translate Label_Login}" Style="{StaticResource ButtonPrimaryStyle}" Margin="20" Command="{Binding LoginCommand}"/>
            <Grid x:Name="SignupLayout" Grid.Row="5" Margin="0,10" HorizontalOptions="Center" >
                <Label x:Name="SignupButton"  Text="{Translations:Translate Label_Signup}" />
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SignupCommand}"/>
                </Grid.GestureRecognizers>
            </Grid>
        </Grid>
</Screens:BaseView>